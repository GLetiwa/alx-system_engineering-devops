#!/usr/bin/env bash

# Define the path to the manage_my_process script.
MANAGE_SCRIPT="/path/to/manage_my_process"

# Define the PID file path.
PID_FILE="/var/run/my_process.pid"

# Function to start the manage_my_process script.
start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running. PID: $(cat "$PID_FILE")"
    else
        "$MANAGE_SCRIPT" &
        echo "$!" > "$PID_FILE"
        echo "manage_my_process started"
    fi
}

# Function to stop the manage_my_process script.
stop() {
    if [ -f "$PID_FILE" ]; then
        pid=$(cat "$PID_FILE")
        kill "$pid"
        rm "$PID_FILE"
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running."
    fi
}

# Function to restart the manage_my_process script.
restart() {
    stop
    start
    echo "manage_my_process restarted"
}

# Main script logic
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        #exit 1
        ;;
esac
